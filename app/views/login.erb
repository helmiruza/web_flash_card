<!-- Main component for a primary marketing message or call to action -->
<div class="container">
	<div class="header clearfix">
        <nav>
          <ul class="nav nav-pills pull-right">
            <li role="presentation"><a href="/">Home</a></li>
            <li role="presentation"><a href="/dashboard">Dashboard</a></li>
            <li role="presentation" class="active"><a href="/login">Login</a></li>
            <li role="presentation"><a href="/register">Register</a></li>
            <li role="presentation"><a href="/logout">Logout</a></li>
          </ul>
        </nav>
        <h3 class="text-muted">CD WFC</h3>
      </div>
	  
	  <div class="jumbotron">

		<h1>Player Login</h1>
		<p>You must be logged in to play WFC Web Flash Card game</p>
			<% if !@errors.nil?%>
        <% @errors.each do |error| %>
          <%= error%>
        <%end%>
      <% end %>
		<p>
			<form action='/login' method='post'>
			  <div class="form-group">
				<label for="username_input">Username</label>
				<input type="input" class="form-control" name="user[username]" placeholder="Username">
			  </div>
			  <div class="form-group">
				<label for="password_input">Password</label>
				<input type="password" class="form-control" name="user[password]" placeholder="Password">
			  </div>
			  <button type="submit" class="btn btn-success btn-lg">Login to Dashboard &raquo;</button>
			</form>
		</p>
	  </div>

	</div> <!-- /container -->
</div>